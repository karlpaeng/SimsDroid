    package="com.example.softwareengineering">

    <uses-sdk tools:overrideLibrary="com.google.zxing.client.android" />

    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_rounded_square"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_rounded_square"
        android:supportsRtl="true"
        android:theme="@style/Theme.MaterialComponents.NoActionBar">
        <activity android:name=".OrderDetailsActivityCopy"></activity>
        <activity android:name=".ScanProductCopyActivity" />
        <activity android:name=".SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".UpdateDataActivity" />
        <activity android:name=".RegisterProductActivity" />
        <activity android:name=".SearchProduct2Activity" />
        <activity android:name=".ViewInventoryActivity" />
        <activity android:name=".TransactionActivity" />
        <activity android:name=".UserCreationActivity" />
        <activity android:name=".Settings" />
        <activity android:name=".SecQuestionActivity" />
        <activity android:name=".ForgotPass2Activity" />
        <activity android:name=".ForgotPassActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".OrderDetailsActivity" />
        <activity android:name=".NoBarcodeActivity" />
        <activity android:name=".ScanProductActivity" />
        <activity android:name=".MainActivity2" />
        <activity android:name=".MainActivity" />
        <activity
            android:name=".Capture"
            android:screenOrientation="portrait"
            android:stateNotNeeded="true"
            android:theme="@style/zxing_CaptureTheme" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>